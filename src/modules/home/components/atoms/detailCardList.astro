---
import { Card, CardContent, CardHeader, CardTitle } from "@/globals/components/ui/card";

const {title} = Astro.props;
---

<Card className="shadow-xl">
    <CardHeader className="gap-0 flex justify-between flex-col min-h-20">
        <CardTitle className="text-2xl font-normal pb-0">{title}</CardTitle>
    </CardHeader>
    <CardContent>
        <ul class="flex flex-col gap-1">
            <slot />
        </ul>
    </CardContent>
</Card>