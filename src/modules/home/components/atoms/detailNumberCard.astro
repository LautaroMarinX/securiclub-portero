---
import { Card, CardDescription, CardFooter, CardHeader, CardTitle } from "@/globals/components/ui/card";

const {icon: Icon, title, description} = Astro.props

---

<Card className="shadow-none bg-secondary hover:shadow-xl duration-300 last:col-span-1 md:last:col-span-2 lg:last:col-span-1">
    <CardHeader className="gap-0 h-20 flex justify-between flex-col">
        <Icon  class="size-10 stroke-1"/>
    </CardHeader>
    <CardFooter className="flex flex-col items-start">
            <CardTitle className="text-2xl font-normal pb-0">{title}</CardTitle>
            <CardDescription className="text-md">{description}</CardDescription>
    </CardFooter>
</Card>